<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">


    <ScrollView
        android:id="@+id/deviceset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imf"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/foodselect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/imf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/sptortcarltitle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/carl"/>


        <TextView
            android:id="@+id/sptortcarlvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sptortcarltitle"
            android:text="0cal"
            android:textColor="@color/select_color"
            android:textSize="17sp" />




    </RelativeLayout>
</RelativeLayout>
