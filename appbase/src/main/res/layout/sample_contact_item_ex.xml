<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/conversationlayer"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            >

        <TextView
            android:id="@+id/contact_img"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:text=""
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="32dp"
            android:layout_height="17.0dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contact_img"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_horizontal|center_vertical"
            android:background="#00000000"
            android:text=""
            android:textColor="#8F9093"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/conversationlayer"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/delete"
            />
        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/conversationlayer"
            />
    </RelativeLayout>


</RelativeLayout >