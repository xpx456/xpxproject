<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >


    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/close_image"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/conversation_img"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:textSize="12dip"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="17dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_marginTop="12.0dip"
            android:layout_marginLeft="10dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#8F9093"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dit"
            android:layout_width="wrap_content"
            android:layout_height="17dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/conversation_title"
            android:layout_marginTop="12.0dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#8F9093"
            android:text="."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/conversation_time"
            android:layout_width="wrap_content"
            android:layout_height="17dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dit"
            android:layout_marginTop="12.0dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#8F9093"
            android:text=""
            android:textSize="12sp" />

        <intersky.mywidget.GifTextView
            android:id="@+id/conversation_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversation_title"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_marginLeft="10dip"
            android:textIsSelectable="true"
            android:layout_marginTop="9dp"
            android:text=""
            android:ellipsize="end"
            android:textColor="#3A3E42"
            android:layout_marginBottom="10dp"
            android:textSize="13sp" />


        <RelativeLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dip"
            android:background="#F5F6F6"></RelativeLayout>

    </RelativeLayout>


</RelativeLayout >