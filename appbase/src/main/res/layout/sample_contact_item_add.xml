<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dip"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/conversationlayer"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="#00000000">

            <ImageView
                android:id="@+id/contact_img"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_bg_dish"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/addperson" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="17.0dip"
                android:layout_below="@+id/contact_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="#00000000"
                android:ellipsize="end"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:text="@string/select_contact_add"
                android:textColor="#000000"
                android:textSize="11dp" />

        </RelativeLayout>


        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/conversationlayer"
            />
    </RelativeLayout>

</RelativeLayout>