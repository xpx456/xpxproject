<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/stutebar"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back"
            android:layout_centerVertical="true"
            android:text="选择相册"
            android:textColor="#ff23272e"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="已选择0个文件"
            android:textColor="#ff23272e"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            android:text=""
            android:textColor="#3370FF"
            android:textSize="14sp" />

    </RelativeLayout>


    <GridView
        android:id="@+id/photo_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/head"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:listSelector="#00000000"
        android:verticalSpacing="1dp"
        android:layout_marginBottom="70dip"/>

    <RelativeLayout
        android:id="@+id/btnsave2"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/buttomaciton"
        android:visibility="invisible"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/priview"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_readbg"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_word_privew"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/save2"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_readbg"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_word_ok"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/allfilebuttomimf"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:clipChildren="true"
            android:background="@drawable/shape_positon_bg" >
            <TextView
                android:id="@+id/selectpath"
                android:layout_width="70dp"
                android:layout_height="20dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dip"
                android:gravity="center_vertical|left"
                android:text="@string/button_title_uploadposition"
                android:textColor="#23272E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnleft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_toRightOf="@+id/selectpath"
                android:layout_marginLeft="38dip"
                android:layout_marginRight="30dip"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#23272E"
                android:text="@string/button_word_document"
                android:textSize="17dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="102dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clipChildren="true"
            android:src="@drawable/folder_icon"
            />


        <TextView
            android:id="@+id/btnright"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_readbg"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_word_upload"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />

</RelativeLayout>