<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide" >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        />



    <RelativeLayout
        android:id="@+id/viewa"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_safe_window"
        android:visibility="invisible"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/safe_title"
            />
        <TextView
            android:id="@+id/a111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <RelativeLayout
            android:id="@+id/buttomline"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#ececec"
            android:layout_below="@+id/a111"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#ececec"
            android:layout_below="@+id/buttomline"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/later"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:layout_below="@+id/buttomline"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="@string/button_word_later"
            android:gravity="center_horizontal|center_vertical"
            />

        <TextView
            android:id="@+id/commit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:layout_below="@+id/buttomline"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textColor="#8cc3ea"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/button_word_commit"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#77000000">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />
</RelativeLayout>
