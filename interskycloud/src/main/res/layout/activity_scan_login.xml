<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/stutebar">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/safe_loing_title2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ff23272e"
            android:textSize="17sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nomallayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imagecentger"
            android:layout_width="180dp"
            android:layout_height="123.5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/scanbgc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/imagecentger"
            android:layout_marginTop="33dp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:text="@string/safelogin"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_oklogin"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="57dp"
            android:background="@drawable/btn_shape_empty_blue"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:text=""
            android:textColor="#91c8ff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/errorlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@+id/head"
        android:orientation="vertical">
        <TextView
            android:id="@+id/errortxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="323dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="73dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/safelogin"
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />
</RelativeLayout>