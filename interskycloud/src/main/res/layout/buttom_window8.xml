<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_popup_window_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ffffff"
        android:scaleType="fitXY"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/headlayer"
        android:layout_width="fill_parent"
        android:layout_height="192dip">

        <TextView
            android:id="@+id/dete1_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="84dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dip"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textColor="#222222"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/dete1_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dip"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/word_1"
            android:textColor="#666666"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headlayer"
        android:layout_marginBottom="89dp"
        android:descendantFocusability="blocksDescendants">

        <GridView
            android:id="@+id/more_grid"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:listSelector="#00000000"
            android:numColumns="2"
            android:scrollbars="none"
            android:horizontalSpacing="15dp"
            android:verticalSpacing="15dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="67.0dip"
        android:layout_height="67.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/mores" />


</RelativeLayout>