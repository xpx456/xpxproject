<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#55000000"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/toplayer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:background="@drawable/shape_bg_d_attendance">

        <RelativeLayout
            android:id="@+id/layerhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/at"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/loction" />

            <TextView
                android:id="@+id/titlesuccess"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_toRightOf="@+id/at"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="打卡成功"
                android:textColor="#ffffff"
                android:textSize="32dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sendTextlayer"
            android:layout_width="166dp"
            android:layout_height="64dp"
            android:layout_below="@+id/layerhead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/middlebg">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="下"
                    android:textColor="#000000"
                    android:textSize="19dip" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/title1"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="班"
                    android:textColor="#000000"
                    android:textSize="19dip" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/title1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="16:42"
                    android:textColor="#000000"
                    android:textSize="37dp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/sendTextlayer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="辛苦？因为在走上坡路!"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@+id/des"
            android:layout_marginTop="37dp"
            android:background="#ffffff">
        </RelativeLayout>

        <TextView
            android:id="@+id/btn"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="我知道了"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </RelativeLayout>


</RelativeLayout>