<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        />

    <RelativeLayout
        android:id="@+id/tab_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/stutebar"
        android:layout_marginBottom="50dp"
        android:background="#f5f5f5"></RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/conversation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/layerout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/conversation_image"
                    android:layout_width="48dip"
                    android:layout_height="32dip"
                    android:src="@mipmap/conversation" />

                <TextView
                    android:id="@+id/conversation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/conversation_image"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/main_conversation"
                    android:textColor="#646A73"
                    android:textSize="10sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/conversation_hit"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-6dip"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/layerout1"
                android:background="@drawable/shape_hit_bg_red"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ffffff"
                android:textSize="12dip"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/work"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/work_image"
                    android:layout_width="48dip"
                    android:layout_height="32dip"
                    android:src="@mipmap/work" />

                <TextView
                    android:id="@+id/work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/work_image"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/main_word"
                    android:textColor="#646A73"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/work_hit"
                    android:layout_width="8.0dip"
                    android:layout_height="8.0dip"
                    android:layout_alignTop="@+id/work_image"
                    android:layout_alignRight="@+id/work_image"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/shape_hit_bg_red"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="6dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contacts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/contacts_image"
                    android:layout_width="48dip"
                    android:layout_height="32dip"
                    android:src="@mipmap/contacts" />

                <TextView
                    android:id="@+id/contacts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/contacts_image"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/main_contact"
                    android:textColor="#646A73"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/my_image"
                    android:layout_width="48dip"
                    android:layout_height="32dip"
                    android:src="@mipmap/my" />

                <TextView
                    android:id="@+id/my_text"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/my_image"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/main_my"
                    android:textColor="#646A73"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttomaciton"
        >

        <ImageView
            android:id="@+id/more_image"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:src="@mipmap/more" />


        <TextView
            android:id="@+id/more_text"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/more_image"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_new"
            android:textColor="#646A73"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />
</RelativeLayout>
