<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg_gray">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F2F4" >

        <LinearLayout
            android:id="@+id/functions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F2F4">


            <RelativeLayout
                android:id="@+id/myhead"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:text="我的工作"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="#ff23272e"
                    android:textSize="28sp"
                    />


                <ImageView
                    android:id="@+id/searchmy"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/mysearch"
                    />
            </RelativeLayout>

            <intersky.mywidget.MyGridView
                android:id="@+id/mygrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:gravity="center"
                android:horizontalSpacing="41dp"
                android:verticalSpacing="27dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:scrollbars="none"/>


            <RelativeLayout
                android:id="@+id/allhead"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:text="全部应用"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="#ff23272e"
                    android:textSize="28sp"
                    />

            </RelativeLayout>


            <intersky.mywidget.MyGridView
                android:id="@+id/allgrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:gravity="center"
                android:horizontalSpacing="41dp"
                android:verticalSpacing="27dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:scrollbars="none"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
