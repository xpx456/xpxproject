<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg_gray">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F2F4">

        <LinearLayout
            android:id="@+id/functions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#F0F2F4"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/myhead"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="@string/my_work"
                    android:textColor="#ff23272e"
                    android:textSize="28sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/searchmy"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/mysearch" />
            </RelativeLayout>

            <intersky.mywidget.MyGridView
                android:id="@+id/mygrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:horizontalSpacing="20dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="27dp"
                android:paddingTop="27dp"
                android:scrollbars="none"
                android:verticalSpacing="27dp" />


            <RelativeLayout
                android:id="@+id/allhead"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="@string/my_all_work"
                    android:textColor="#ff23272e"
                    android:textSize="22sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ececec">

                <intersky.mywidget.MyGridView
                    android:id="@+id/allgrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:horizontalSpacing="20dp"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="27dp"
                    android:paddingTop="27dp"
                    android:scrollbars="none"
                    android:verticalSpacing="27dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="27dp"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
