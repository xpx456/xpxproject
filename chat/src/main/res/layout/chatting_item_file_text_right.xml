<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/timelayer"
        android:layout_width="fill_parent"
        android:layout_height="19dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/shape_chat_time_bg"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/iv_userhead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="20dip"
            android:textColor="#ffffff"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/shape_bg_cycle"
            android:focusable="false" />

        <TextView
            android:id="@+id/array"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toLeftOf="@id/iv_userhead"
            android:layout_marginRight="2dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape_sanjiao_r_blue"
            />

        <RelativeLayout
            android:id="@+id/textcontent"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@id/array"
            android:layout_marginLeft="40dp"
            android:background="#ffffffff">

            <ImageView
                android:id="@+id/tv_chatcontent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_list_unknown"
                android:background="#00000000"/>

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/tv_chatcontent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="adfssdfad.pdf"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:layout_below="@+id/filename"
                android:layout_marginLeft="15dp"
                android:textColor="#C9C7CD"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:text="未知大小"
                android:layout_alignParentLeft="true"
                />

            <ProgressBar
                android:id="@+id/roundProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/tv_chatcontent"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:progressDrawable="@drawable/shape_seekbar_bg" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fail"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/textcontent"
            android:layout_toLeftOf="@+id/textcontent"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_round_red"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="invisible"
            android:text="!"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/loding"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/textcontent"
            android:layout_toLeftOf="@+id/textcontent"
            android:layout_marginTop="7dp"
            android:visibility="invisible"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/loding_gray"
            />

    </RelativeLayout>



</LinearLayout>