<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:background="#80ffffff">

        <TextView
            android:id="@+id/timetitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65px"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#666666"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/main_time"
            />

        <TextView
            android:id="@+id/timevalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/timetitle"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#666666"
            android:gravity="center_vertical|center_horizontal"
            android:text="2020-030-09 17:23:50"
            />


        <TextView
            android:id="@+id/typetitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/timevalue"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#666666"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/main_type"
            />

        <TextView
            android:id="@+id/typevalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/typetitle"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#666666"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal"
            android:text="午餐"
            />

        <TextView
            android:id="@+id/imfmation"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/typevalue"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#ea4141"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/main_imf"
            />

        <TextView
            android:id="@+id/btn_send"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/setting"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:textColor="#ea4141"
            android:visibility="invisible"
            android:gravity="center_vertical|center_horizontal"
            android:text="点击发送"
            />

        <ImageView
            android:id="@+id/setting"
            android:layout_height="31px"
            android:layout_width="31px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:src="@drawable/setting"
            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/register"
        android:layout_width="327px"
        android:layout_height="327px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45px"
        android:layout_marginTop="350px"
        android:src="@drawable/register" />


    <TextView
        android:id="@+id/version"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:textColor="#ffffff"
        android:textSize="20px"
        />


</RelativeLayout>