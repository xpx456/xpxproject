<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flipview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/padbg">


    <ImageView
        android:layout_width="753px"
        android:layout_height="171px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <RelativeLayout
            android:id="@+id/pagelayer"
            android:layout_width="1360px"
            android:layout_height="800px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000">

            <intersky.mywidget.flipview.FlipView
                android:id="@+id/flip_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                flipview:orientation="horizontal">
            </intersky.mywidget.flipview.FlipView>

            <TextView
                android:id="@+id/empty_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="32sp"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        />

</RelativeLayout>