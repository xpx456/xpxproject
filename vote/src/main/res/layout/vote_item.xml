<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/contentlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/shape_bg_vote_item">

        <TextView
            android:id="@+id/vote_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:textColor="#ff23272e"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/contact_img"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/vote_name"
            android:textSize="10dip"
            android:singleLine="true"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:textColor="#ffffff"/>


        <TextView
            android:id="@+id/vote_dete"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text=""
            android:textColor="#ff8f9093"
            android:textSize="12sp"
            android:layout_below="@+id/vote_name"
            android:layout_toRightOf="@+id/contact_img"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="#F5F6F6"
            android:layout_below="@+id/contact_img"
            />


        <TextView
            android:id="@+id/vote_type"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text=""
            android:textColor="#ff8f9093"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/line1"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/image_sig_cion"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/shape_bg_item_newbg"
            />
        <TextView
            android:id="@+id/vote_sig"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:text="@string/vote_title_new"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />


    </RelativeLayout>

</RelativeLayout>