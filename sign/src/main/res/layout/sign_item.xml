<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_person_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <View
        android:id="@+id/view"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:background="#ffffff">


        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#ff23272e"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/item_time"
            android:layout_marginTop="9dp"
            android:background="#f5f5f5"
            />

        <ImageView
            android:id="@+id/location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/locate"
            />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:layout_below="@+id/line1"
            android:layout_toLeftOf="@+id/array"
            android:layout_toRightOf="@+id/location"
            android:gravity="center_vertical|left"
            android:layout_marginTop="10dp"
            android:textColor="#ff23272e"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_name"
            android:layout_toLeftOf="@+id/array"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#ff8f9093"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            />



        <ImageView
            android:id="@+id/array"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line1"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/arrayright"
            />

    </RelativeLayout>

</RelativeLayout>