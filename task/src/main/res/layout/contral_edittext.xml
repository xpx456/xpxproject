<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/unit"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:maxLines="1"
            android:gravity="left|center"
            android:textColor="@color/textcolor2"
            android:text="asdfas"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:textColor="@color/textcolor2"
            android:background="#00000000"
            android:hint="sdfasfasfdsa"
            android:textColorHint="@color/text1"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/textcolor2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/content_layer"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/content_layer"
        android:layout_marginTop="10dp"
        android:background="@color/strokecolor">
    </RelativeLayout>
</RelativeLayout>