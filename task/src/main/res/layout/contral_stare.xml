<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="asdfas"
            android:textColor="@color/textcolor2"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/leaves"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/leave1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/star_n"/>
            <ImageView
                android:id="@+id/leave2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/star_n"/>
            <ImageView
                android:id="@+id/leave3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/star_n"/>
            <ImageView
                android:id="@+id/leave4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/star_n"/>
            <ImageView
                android:id="@+id/leave5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/star_n"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/content_layer"
        android:layout_marginTop="10dp"
        android:background="@color/strokecolor"></RelativeLayout>
</RelativeLayout>