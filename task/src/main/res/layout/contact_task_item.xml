<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="67dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/contact_img"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:textSize="18dip"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:textColor="#ffffff"/>


        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contact_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="45dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text=""
            android:textSize="@dimen/nomal_edit_size" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ntask_more"
            />

        <RelativeLayout
            android:id="@+id/buttomline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#ececec"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout >