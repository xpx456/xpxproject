<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whiteex">
    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whiteex">

        <TextView
            android:id="@+id/tag_1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:background="@drawable/shape_bg_tag_cycle1"
            android:textSize="16dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tag_1"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/nomal_edit_size" />

        <ImageView
            android:id="@+id/item_mial_select_icon"
            android:layout_width="18dip"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/selectmial"/>

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            android:background="@color/strokecolor">
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>