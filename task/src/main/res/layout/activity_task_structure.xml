<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteex">

    <EditText
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_alignParentTop="true"
        />


    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/stutebar"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/task_structure_task_structure"
            android:textColor="#ff23272e"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/btnchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/button_word_edit"
            android:textColor="#ff23272e"
            android:layout_marginRight="16dp"
            android:textSize="17sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:layout_marginTop="10dp"
        android:layout_above="@id/buttomaciton"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ntask_project" />

                <LinearLayout
                    android:id="@+id/project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/project_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/task_main_tab_project"
                        android:textColor="@color/viewfinder_mask"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/project_name_change"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/task_detial_project_none"
                            android:textColor="@color/textcolor2"
                            android:textSize="@dimen/nomal_edit_size" />

                        <TextView
                            android:id="@+id/project_name_change"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/xml_change"
                            android:textColor="@color/navBarBkColor"
                            android:textSize="@dimen/nomal_edit_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/stage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">


                        <TextView
                            android:id="@+id/stage_name"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/project_img"
                            android:background="@drawable/shape_search_item_bg9"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/task_detial_project_none"
                            android:textColor="@color/textcolor2"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/stage_name_change"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/xml_change"
                            android:textColor="@color/navBarBkColor"
                            android:textSize="@dimen/nomal_edit_size" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/style_divider_color"></RelativeLayout>

            <LinearLayout
                android:id="@+id/parent_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/task_parent" />

                <LinearLayout
                    android:id="@+id/parent_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/parent_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/task_structure_parent"
                        android:textColor="@color/viewfinder_mask"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/parent_task_name"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/parent_task_name_change"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/task_structure_of_parent"
                            android:textColor="@color/textcolor2"
                            android:textSize="@dimen/nomal_edit_size" />

                        <TextView
                            android:id="@+id/parent_task_name_change"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/xml_change"
                            android:textColor="@color/navBarBkColor"
                            android:textSize="@dimen/nomal_edit_size" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layerparent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/style_divider_color"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/nowtask" />

                <LinearLayout
                    android:id="@+id/task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/task_structure_now"
                        android:textColor="@color/viewfinder_mask"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/task_name"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/contact_img"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/textcolor2"
                            android:textSize="@dimen/nomal_edit_size" />

                        <TextView
                            android:id="@+id/contact_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/shape_bg_cycle"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="#ffffff"
                            android:textSize="19dip" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/parent_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/style_divider_color"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_task"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/taskadd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:gravity="center_vertical|left"
                    android:src="@drawable/ntask_add" />


                <EditText
                    android:id="@+id/edittitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/taskadd"
                    android:background="#00000000"
                    android:gravity="center_vertical|left"
                    android:hint="@string/task_detial_creat_son_task"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/task_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/edittitle"
                android:background="@color/style_divider_color"></RelativeLayout>

            <LinearLayout
                android:id="@+id/son_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/son_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/task_structure_son"
                    android:textColor="@color/viewfinder_mask"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/son_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />
</RelativeLayout>
