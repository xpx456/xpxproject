<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_popup_window_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ffffff"
        android:scaleType="fitXY"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/headlayer"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_marginTop="60dip"
        android:background="#00ffffff">

        <RelativeLayout
            android:id="@+id/middleline"
            android:layout_width="1dip"
            android:layout_height="68dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"></RelativeLayout>

        <TextView
            android:id="@+id/dete1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dip"
            android:layout_toLeftOf="@+id/middleline"
            android:gravity="center_vertical|right"
            android:text="09"
            android:textColor="#ee6133"
            android:textSize="52dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dip"
            android:layout_toLeftOf="@+id/dete1_text">


            <TextView
                android:id="@+id/dete2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:text="2016/11/"
                android:textColor="#3a484f"
                android:textSize="@dimen/nomal_edit_size" />

            <TextView
                android:id="@+id/week_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dete2_text"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:text="2016/11/"
                android:textColor="#3a484f"
                android:textSize="@dimen/nomal_edit_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dip"
            android:layout_toRightOf="@+id/middleline"
            android:gravity="top|left"
            android:maxLines="2"
            android:text="努力工作\n是为了更好的生活"
            android:textColor="#529fdf"
            android:textSize="17dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headlayer"
        android:layout_marginTop="13dip"
        android:descendantFocusability="blocksDescendants">

        <GridView
            android:id="@+id/more_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/close"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7.5dip"
            android:contentDescription="@string/app_name"
            android:rotation="45"
            android:src="@drawable/mores" />

    </RelativeLayout>


</RelativeLayout>