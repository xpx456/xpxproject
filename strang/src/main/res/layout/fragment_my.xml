<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteex">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:background="#ffffff"
        android:layout_marginTop="15dip"
        android:id="@+id/headlayer"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/head"
            android:layout_width="63dip"
            android:layout_height="63dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_cycle1"
            android:layout_marginLeft="20dip"
            android:textColor="#4f5a76"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dip"
            android:text="我"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/head">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:text=""
                android:id="@+id/name"
                android:textSize="18dip"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|left"
                android:layout_alignParentTop="true"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:text=""
                android:id="@+id/phone"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|left"
                android:layout_below="@+id/name"
                android:singleLine="true" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/nowuserlayer"
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:background="#ffffff"
        android:layout_below="@+id/headlayer"
        android:layout_marginTop="15dip">

        <ImageView
            android:id="@+id/nowusericon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/nowuser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="@string/xml_dangqiandenglu"
            android:id="@+id/nowuser"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/nowusericon"
            android:layout_marginLeft="20dip"
            android:gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:id="@+id/nowusername"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:textSize="17dip"
            android:textColor="#545454"
            android:gravity="center_vertical|right"
            android:text="我"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dip"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:id="@+id/line4"
        android:layout_below="@+id/nowuserlayer">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/servicelayer"
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:background="#ffffff"
        android:layout_below="@+id/line4">

        <ImageView
            android:id="@+id/serviceicon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/service"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="@string/xml_fuwuqishezhi"
            android:id="@+id/service"
            android:textSize="16dip"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/serviceicon"
            android:gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:singleLine="true" />


        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/skip"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dip"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:id="@+id/line5"
        android:layout_below="@+id/servicelayer">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cleanlayer"
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:background="#ffffff"
        android:layout_below="@+id/line5">

        <ImageView
            android:id="@+id/cleanicon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/clean"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="@string/xml_cleandata"
            android:id="@+id/clean"
            android:textSize="16dip"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/cleanicon"
            android:gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:singleLine="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/aboutlayer"
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:background="#ffffff"
        android:layout_marginTop="15dip"
        android:layout_below="@+id/cleanlayer">

        <ImageView
            android:id="@+id/abouticon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:text="@string/xml_guanyu"
            android:id="@+id/about"
            android:textSize="16dip"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/abouticon"
            android:gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:singleLine="true" />


        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/skip"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:text="@string/xml_tuichu"
        android:id="@+id/exit"
        android:textSize="16dip"
        android:textColor="#000000"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/aboutlayer"
        android:background="#ffffff"
        android:singleLine="true" />


</RelativeLayout>
