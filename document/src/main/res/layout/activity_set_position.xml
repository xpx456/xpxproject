<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_set_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9" >

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/stutebar"
        android:background="#ffffff">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/document_uploadposition"
            android:textColor="#ff23272e"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/calcle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:text="@string/button_word_cancle"
            android:textColor="#3370FF"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/horizon_listview_Layer"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_below="@+id/head"
        android:background="#e9e9e9" >

        <intersky.mywidget.HorizontalListView
            android:id="@+id/horizon_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >
        </intersky.mywidget.HorizontalListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/horizon_listview_Layer"
        android:layout_marginBottom="50dip"
        android:layout_marginTop="25dip"
        android:background="#000000" >

        <ListView
            android:id="@+id/select_List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:focusable="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/selectPositionfilebuttom"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnleft"
                android:layout_width="164dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/shape_bg_readbgun"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/document_newdocument"
                android:textColor="#23272E"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#393f4f" >

            <TextView
                android:id="@+id/btnright"
                android:layout_width="164dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/shape_bg_readbg"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/document_xuandingdocument"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />
</RelativeLayout>