<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/item_busines_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip" />

        <ImageView
            android:id="@+id/item_busines_pic"
            android:layout_width="42dip"
            android:layout_height="42dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/item_busines_icon"
            android:src="@drawable/headicon" />

        <TextView
            android:id="@+id/item_busines_name"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/item_busines_pic"
            android:gravity="center_vertical|left"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_busines_mobil"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/item_busines_name"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="30dip"
            android:layout_toRightOf="@+id/item_busines_pic"
            android:gravity="top|left"
            android:textColor="#99000000"
            android:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>