<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dip"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dip"
        android:background="#ffffff"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fujian_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip" />

        <TextView
            android:id="@+id/fujian_name"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/fujian_img"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fujian_dete"
            android:layout_width="180dip"
            android:layout_height="20dip"
            android:layout_below="@+id/fujian_name"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/fujian_img"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#c0c0c0"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/fujian_size"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/fujian_name"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/fujian_dete"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#c0c0c0"
            android:textSize="14dp" />


        <RelativeLayout
            android:id="@+id/theme_line1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"></RelativeLayout>

    </RelativeLayout>

</RelativeLayout>