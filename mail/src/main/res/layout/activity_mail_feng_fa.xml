<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mail_feng_fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_below="@id/stutebar">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keyword_mailfengfa"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ff23272e"
            android:textSize="17sp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/custom_title"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dip"
                android:background="#ffffff"
                android:gravity="center_vertical|left"
                android:text="@string/xml_fenfagei"
                android:textColor="#000000"
                android:textSize="@dimen/nomal_edit_size" />

            <TextView
                android:id="@+id/time_title"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/custom_title"
                android:layout_marginTop="10dip"
                android:background="#ffffff"
                android:gravity="center_vertical|left"
                android:text="@string/xml_chuliqixian"
                android:textColor="#000000"
                android:textSize="@dimen/nomal_edit_size" />

            <TextView
                android:id="@+id/detial_title"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/time_title"
                android:layout_marginTop="10dip"
                android:background="#ffffff"
                android:gravity="top|left"
                android:text="@string/xml_fenfazhishi"
                android:textColor="#000000"
                android:textSize="@dimen/nomal_edit_size" />

            <TextView
                android:id="@+id/lable_title"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detial_title"
                android:layout_marginTop="100dip"
                android:background="#ffffff"
                android:gravity="top|left"
                android:text="@string/xml_biaoqian"
                android:textColor="#000000"
                android:textSize="@dimen/nomal_edit_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/line1"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/custom_layer"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dip"
                android:background="@drawable/shape_bg_fengfa" >

                <TextView
                    android:id="@+id/custom_text_add"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dip"
                    android:gravity="center_vertical|center"
                    android:text="..."
                    android:textColor="#000000"
                    android:textSize="@dimen/nomal_edit_size" />

                <TextView
                    android:id="@+id/custom_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dip"
                    android:layout_toLeftOf="@+id/custom_text_add"
                    android:gravity="center_vertical|left"
                    android:textColor="#000000"
                    android:textSize="@dimen/nomal_edit_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_layer"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_below="@+id/custom_layer"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_bg_fengfa" >

                <ImageView
                    android:id="@+id/time_text_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dip"
                    android:gravity="center_vertical|center"
                    android:src="@drawable/selectmore" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dip"
                    android:layout_toLeftOf="@+id/time_text_add"
                    android:gravity="center_vertical|left"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detial_layer"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_below="@+id/time_layer"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_bg_fengfa" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:maxHeight="120dip" >

                    <EditText
                        android:id="@+id/detial_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:minHeight="120dip"
                        android:textColor="#000000"
                        android:textSize="@dimen/nomal_edit_size" />
                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lable_layer"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_below="@+id/detial_layer"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_bg_fengfa" >

                <ImageView
                    android:id="@+id/lable_text_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dip"
                    android:gravity="center_vertical|center"
                    android:src="@drawable/selectmore" />

                <TextView
                    android:id="@+id/lable_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dip"
                    android:layout_toLeftOf="@+id/lable_text_add"
                    android:gravity="center_vertical|left"
                    android:textColor="#000000"
                    android:textSize="@dimen/nomal_edit_size" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="10dip"
            android:background="#1ca6e7"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/button_word_ok"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cancle_text"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line2"
            android:layout_marginRight="50dip"
            android:layout_marginTop="10dip"
            android:background="#1ca6e7"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/button_word_cancle"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/List_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/line1"
            android:maxHeight="120dip"
            android:visibility="invisible" >

            <ListView
                android:id="@+id/serverList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:divider="#00000000"
                android:background="#f8f8f8" >
            </ListView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/serverList"
                android:background="#d9d9d9" >
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />

</RelativeLayout>