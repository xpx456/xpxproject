<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:layout_centerHorizontal="true"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/shoujianxiangxin_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dip"
        android:src="@drawable/shoujianxiang" />

    <TextView
        android:id="@+id/shoujianxiang_text_xin"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dip"
        android:layout_toRightOf="@+id/shoujianxiangxin_img"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/shoujianxiang_count_text_xin"
        android:textColor="#23272E"
        android:text="@string/keyword_mailtitlercycle"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/shoujianxiang_count_text_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:text="1"
        android:textColor="#23272E"
        android:textSize="14sp"
        android:visibility="invisible" />

</RelativeLayout>