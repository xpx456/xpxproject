            <!--</RelativeLayout>-->

            <!--<RelativeLayout-->
            <!--android:id="@+id/mail_buttom_delete"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="#f5f5f5" >-->

            <!--<ImageView-->
            <!--android:id="@+id/delete"-->
            <!--android:layout_width="40dip"-->
