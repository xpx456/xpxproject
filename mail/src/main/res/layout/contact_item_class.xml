<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="67dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/contact_img"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:layout_centerVertical="true"
            android:src="@drawable/contact_icon_wfp"/>


        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:layout_toRightOf="@+id/contact_img"
            android:layout_toLeftOf="@+id/contact_array"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#000000"
            android:text=""
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/contact_array"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:contentDescription="@string/app_name"
            android:layout_centerVertical="true"
            android:src="@drawable/skip"/>



        <RelativeLayout
            android:id="@+id/buttomline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="76dp"
            android:layout_alignParentBottom="true"
            android:background="#F0F2F4">
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout >