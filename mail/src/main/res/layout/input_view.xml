<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_view_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:text=""
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#222222"
            android:textSize="20sp" />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d4d3"
            android:layout_below="@+id/title"
            />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/line1"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/shape_dialog_edit_bg"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#2ca7ea"
            android:textColorHint="#ececec"
            android:hint=""
            />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d4d3"
            android:layout_below="@+id/edit"
            android:layout_marginTop="20dp"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:background="#d2d4d3"
            android:layout_below="@+id/line2"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/line2"
            android:layout_toLeftOf="@+id/line3"
            android:text="@string/button_word_cancle"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#2ca7ea"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/line2"
            android:layout_toRightOf="@+id/line3"
            android:text="@string/button_word_ok"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#2ca7ea"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
