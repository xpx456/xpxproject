<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layer"
    android:layout_width="480dip"
    android:layout_height="400dip"
    android:background="@drawable/shape_setting" >

    <RelativeLayout
        android:id="@+id/setting_head_layer"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#cdccd1" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_user_layer"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/setting_head_layer"
        android:layout_marginTop="35dip"
        android:background="@drawable/shape_setting_center" >

        <TextView
            android:id="@+id/setting_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="当前登录用户"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_service_layer"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/setting_user_layer"
        android:background="@drawable/shape_setting_center" >

        <TextView
            android:id="@+id/setting_service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="服务器设置"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/setting_service_go"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/iconarrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_synchronous_layer"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/setting_service_layer"
        android:background="@drawable/shape_setting_center" >

        <TextView
            android:id="@+id/setting_synchronous_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="同步产品信息"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_synchronous_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about_layer"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/setting_synchronous_layer"
        android:layout_marginTop="25dip"
        android:background="@drawable/shape_setting_center" >

        <TextView
            android:id="@+id/setting_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/setting_about_go"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/iconarrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_exit_layer"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/setting_about_layer"
        android:layout_marginTop="25dip"
        android:background="@drawable/shape_setting_center" >

        <TextView
            android:id="@+id/setting_exit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical|center"
            android:singleLine="true"
            android:text="退出登录"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>