<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_person_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dip"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/cyclework1"
            android:layout_width="7dip"
            android:layout_height="7dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8.5dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/shape_bg_round1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="14.0dp" />

        <TextView
            android:id="@+id/signtime"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:textColor="#ff1ea1f3"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/cyclework1"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/subtext"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:textColor="#ff4c2e"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/signtime"
            android:ellipsize="end"
            android:maxLines="1"
            />


        <ImageView
            android:id="@+id/addressimage"
            android:layout_width="14dp"
            android:layout_height="15.2dp"
            android:layout_below="@+id/signtime"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cyclework1"
            android:src="@drawable/location1" />

        <TextView
            android:id="@+id/signaddress"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/xml_address"
            android:textColor="#ff23272e"
            android:textSize="14sp"
            android:layout_below="@+id/signtime"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/addressimage"
            android:ellipsize="end"
            android:maxLines="1"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signaddress"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/cyclework1"
            android:layout_marginLeft="16dp"
            android:background="#00000000" >

            <TextView
                android:id="@+id/updata"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/xml_address_updata"
                android:textColor="#ff1ea1f3"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_horizontal|center_vertical"
                />

            <ImageView
                android:id="@+id/arrayright"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/updata"
                android:src="@drawable/arrayright2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/cyclework1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:background="#989EB4" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:background="#989EB4" >
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>