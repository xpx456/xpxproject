<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_work_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteex" >

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/stutebar"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/keyword_workattdenceset"
            android:textColor="#ff23272e"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_layer"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_below="@+id/head"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/add_cion"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/addperson" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dip"
            android:layout_toRightOf="@+id/add_cion"
            android:gravity="left|center_vertical"
            android:text="@string/keyword_newwattdence"
            android:textColor="#000000"
            android:textSize="@dimen/nomal_edit_size" />

        <ImageView
            android:id="@+id/date_cion"
            android:layout_width="7dip"
            android:layout_height="12.5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/arraw" />

    </RelativeLayout>


    <ListView
        android:id="@+id/attdance_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_layer"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/buttomaciton"
        android:divider="#00000000"
        android:dividerHeight="5dp"
        android:background="#00000000"></ListView>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />

</RelativeLayout>
