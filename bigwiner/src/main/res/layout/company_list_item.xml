<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <intersky.mywidget.CircleImageView
            android:id="@+id/conversation_img"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:scaleType="centerCrop"
            android:src="@drawable/noticetemp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_toLeftOf="@+id/type"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="50dp"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/txt_nomal"
            android:text="深圳腾讯科技有限公司"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:background="@drawable/conversation_lable_shape_lgray"
            android:textColor="#858585"
            android:text="主办方"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="20dp"
            android:background="@color/bg_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</RelativeLayout >