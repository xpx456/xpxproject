<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff" />


    <RelativeLayout
        android:id="@+id/headlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/stutebar"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/titlelayer"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentTop="true"
            android:background="#00000000">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back2" />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/txt_nomal"
                android:textSize="20dp" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/headlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/signsuccess" />

    <TextView
        android:id="@+id/name"
        android:layout_height="28dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img"
        android:textColor="@color/txt_nomal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text=""
        />

    <RelativeLayout
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:id="@+id/txt1"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:textSize="14dp"
            android:text="@string/attdence_txt1"
            />

        <TextView
            android:id="@+id/txt2"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/txt1"
            android:textColor="#FF8C00"
            android:textSize="14dp"
            android:text=""
            />

        <TextView
            android:id="@+id/txt3"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/txt2"
            android:textColor="#666666"
            android:textSize="14dp"
            android:text="@string/attdence_txt3"
            />
        </RelativeLayout>

    <TextView
        android:id="@+id/imf2"
        android:layout_height="28dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/count"
        android:textColor="#666666"
        android:layout_marginTop="52dp"
        android:textSize="20dp"
        android:text="@string/attdence_txt4"
        />

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />
</RelativeLayout>