<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        />

    <RelativeLayout
        android:id="@+id/haead"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/stutebar"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/haead"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/shape_login_bg">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/phone_icon"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:maxLines="1"
                android:hint="@string/login_phone_hit"
                android:textColor="@color/logincolor"
                android:textColorHint="@color/loginhitcolor"
                android:textSize="@dimen/nomal_edit_size" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/code_all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="#00000000">

            <RelativeLayout
                android:id="@+id/code_number"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_login_bg">

                <ImageView
                    android:id="@+id/code_icon"
                    android:layout_width="14dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/code_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/code_icon"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:hint="@string/login_check_code_hit"
                    android:inputType="textPassword"
                    android:textColor="@color/logincolor"
                    android:textColorHint="@color/loginhitcolor"
                    android:textSize="@dimen/nomal_edit_size" />


            </RelativeLayout>

            <TextView
                android:id="@+id/code_get_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_login_bg_btn"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/btn_getcode"
                android:textColor="@color/btntextcolor"
                android:textSize="17dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_login_bg">

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/password_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/password_icon"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:hint="@string/login_code_hit"
                android:inputType="textPassword"
                android:textColor="@color/logincolor"
                android:textColorHint="@color/loginhitcolor"
                android:textSize="@dimen/nomal_edit_size" />

            <ImageView
                android:id="@+id/password_show_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/showf2x" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_confirm_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_login_bg">

            <ImageView
                android:id="@+id/password_confirm_icon"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/password_confirm_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/password_confirm_icon"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:hint="@string/login_code_confirm_hit"
                android:inputType="textPassword"
                android:textColor="@color/logincolor"
                android:textColorHint="@color/loginhitcolor"
                android:textSize="@dimen/nomal_edit_size" />

            <ImageView
                android:id="@+id/password_confirm_show_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/showf2x" />
        </RelativeLayout>

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_login_bg_btn"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/forget_submit"
            android:textColor="@color/btntextcolor"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />

</RelativeLayout>
