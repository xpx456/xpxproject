<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff" />


    <RelativeLayout
        android:id="@+id/headlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/stutebar"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/titlelayer"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentTop="true"
            android:background="#00000000">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back2" />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/attdence_title"
                android:textColor="@color/txt_nomal"
                android:textSize="20dp" />

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/linehead"
        android:layout_height="1dp"
        android:layout_below="@+id/headlayer"
        android:layout_width="match_parent"
        android:background="#DDDDDD"
        />
    <LinearLayout
        android:id="@+id/left"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/linehead"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/position"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#F5F5F5"
            android:textColor="@color/txt_nomal"
            android:textSize="@dimen/txt_nomal_size"
            android:text="@string/source_position"
            />
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            />

        <TextView
            android:id="@+id/ports"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#F5F5F5"
            android:textColor="@color/txt_nomal"
            android:textSize="@dimen/txt_nomal_size"
            android:text="@string/source_ports"
            />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            />

        <TextView
            android:id="@+id/serice"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#F5F5F5"
            android:textColor="@color/txt_nomal"
            android:textSize="@dimen/txt_nomal_size"
            android:text="@string/contacts_head_type"
            />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            />

        <TextView
            android:id="@+id/routes"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#F5F5F5"
            android:textColor="@color/txt_nomal"
            android:textSize="@dimen/txt_nomal_size"
            android:text="@string/contacts_head_area"
            />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            />

    </LinearLayout>

    <intersky.mywidget.NoScrollViewPager
        android:id="@+id/datalist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/left"
        android:background="#ffffff"
        android:dividerHeight="1dp"
        android:layout_below="@+id/linehead"
        />

    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" />
</RelativeLayout>