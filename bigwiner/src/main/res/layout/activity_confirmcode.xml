<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/stutebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        />

    <RelativeLayout
        android:id="@+id/haead"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/stutebar"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back2" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/haead"
        android:layout_above="@+id/buttomaciton"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="19dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/txt_nomal"
            android:text="13777057671"
            />

        <TextView
            android:id="@+id/imf"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="19dp"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/txt_nomal"
            android:text=""
            />

        <intersky.mywidget.PhoneCode
            android:id="@+id/area_code"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="#00000000"
            app:count="6"
            android:gravity="center" />


        <TextView
            android:id="@+id/imf2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="11dp"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#F76968"
            android:text="收不到验证码？"
            />

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/shape_login_bg_btn"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/btn_setpassword"
            android:textColor="@color/btntextcolor"
            android:textSize="18dp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/buttomaciton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />
</RelativeLayout>
