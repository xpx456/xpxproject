<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        />

    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/view"
        android:background="@drawable/shape_bg_tasklist_item">

        <TextView
            android:id="@+id/state_img"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:text="@string/approve_type_1"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_bg_tasklist_item"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff16c48d"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/conversation_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/conversation_img"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textColor="#ff23272e"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/conversation_subject"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/conversation_title"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/conversation_img"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textColor="#ff8f9093"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hit"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dip"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/conversation_title"
            android:background="@drawable/shape_bg_round"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/leavetype"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/conversation_subject"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#ff3a3e42"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/leavetype"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ff3a3e42"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/start"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ff3a3e42"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/end"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ff3a3e42"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/button_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:visibility="gone"
            android:layout_marginTop="21dp"
            >

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />

            <View
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/refouse"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_toLeftOf="@+id/lin2"
                    android:text="@string/button_word_refous"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#32363b"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_toRightOf="@+id/lin2"
                    android:text="@string/button_word_accept"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#16C48D"
                    android:textSize="14sp"
                    />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>