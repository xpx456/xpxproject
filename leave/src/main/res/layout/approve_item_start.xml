<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/contact_img"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/contact_head"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_below="@+id/contact_img"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:background="#989EB4"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="37dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/progresshud_wait"
            android:clickable="true" />


        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=""
            android:gravity="center_horizontal|center_vertical"
            android:layout_toRightOf="@+id/contact_img"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:textColor="#ff23272e"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/conversation_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text=""
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#ff8f9093"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/contact_img"
            android:layout_below="@+id/conversation_title"
            android:layout_marginLeft="10dip"
            />

        <TextView
            android:id="@+id/conversation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff666666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:textSize="14sp"
            />




    </RelativeLayout>


</RelativeLayout >